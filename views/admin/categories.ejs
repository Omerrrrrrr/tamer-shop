        <% } %>
        <% if (success) { %>
          <p class="mb-3 text-sm text-emerald-700 bg-emerald-50 border border-emerald-100 rounded-lg px-3 py-2">
            <%= success %>
          </p>
        <% } %>

        <form action="/admin/categories" method="POST" class="grid gap-4 md:grid-cols-[1.2fr,1fr]">
          <div>
            <label class="block text-sm text-slate-700 mb-1">Kategori AdÄ± *</label>
