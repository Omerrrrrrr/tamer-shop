        </form>
      </section>

      <section class="card glass">
        <div class="flex items-center justify-between mb-3">
          <h2 class="text-lg font-semibold">Kategori Listesi</h2>
          <span class="text-xs text-slate-400"><%= categories.length %> kategori</span>
